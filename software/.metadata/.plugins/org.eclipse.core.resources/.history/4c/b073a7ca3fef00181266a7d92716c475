#ifndef SEGMENTS_DISPLAY_H_
#define SEGMENTS_DISPLAY_H_

alt_u8 char_array[10] = {
	0x3F, //0
	0x06, //1
	0x5B, //2
	0x4F, //3
	0x66, //4
	0x6D, //5
	0x7D, //6
	0x07, //7
	0x7F, //8
	0x6F, //9
	0x77, //a
	0x7C, //b
	0x39, //c
	0x5E, //d
	0x79, //e
	0x71  //f
};

void display_string(alt_u8 char, alt_u8 digit);
void display_number(alt_u16 number);

#endif /* SEGMENTS_DISPLAY_H_ */
